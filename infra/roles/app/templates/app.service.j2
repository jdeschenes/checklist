[Unit]
Description={{ app_name }} service
After=network.target postgresql.service
StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_dir }}
EnvironmentFile=-{{ app_env_file }}
ExecStart={{ app_dir }}/{{ app_binary }}
Restart=on-failure
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
